<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="." />
        
        <!-- Include files in the "files" directory -->
        <include domain="file" path="." />
        
        <!-- Exclude debug files -->
        <exclude domain="sharedpref" path="debug_preferences.xml" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Transfer all shared preferences -->
        <include domain="sharedpref" path="." />
        
        <!-- Transfer all files -->
        <include domain="file" path="." />
    </device-transfer>
</data-extraction-rules>
